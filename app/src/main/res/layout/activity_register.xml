<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkerBackground"
    tools:context=".LoginPage">

    <ImageView
        android:id="@+id/MagniteLogo"
        android:layout_width="116dp"
        android:layout_height="104dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/M_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16000003"
        app:srcCompat="@drawable/m_logo" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/pwInput"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorCard"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_Input" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/confirm"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorCard"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwInput" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/email_Input"
        android:layout_width="213dp"
        android:layout_height="49dp"
        android:drawableLeft="@drawable/ic_action_email"
        android:hint="@string/Email"
        android:textColorHint="@color/colorHintText"
        android:textColor="@color/colorCard"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <android.support.v7.widget.CardView
        android:id="@+id/reg_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#00FF70"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.85">

        <RelativeLayout
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/Reg_button"
                android:textColor="#000"
                android:textSize="24sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="New User Registration"
        android:textColor="@color/colorHintText"
        app:layout_constraintBottom_toTopOf="@+id/email_Input"
        app:layout_constraintStart_toStartOf="@+id/email_Input" />


</android.support.constraint.ConstraintLayout>